<div class="flex flex-row justify-between">
  <div class="sm:flex-auto">
    <h1 class="font-bold text-2xl leading-6"><%= @title %></h1>
    <p class="mt-4 text-sm"><%= @text %></p>
  </div>

  <% if @link_title.present? || @link_path.present? %>
    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
      <%= render LinkComponent.new(title: @link_title, path: @link_path) %>
    </div>
  <% end %>
</div>
