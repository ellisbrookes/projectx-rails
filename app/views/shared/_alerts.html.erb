<% if notice || alert %>
  <div class="flex items-center bg-nepal-300 dark:bg-slate-600 px-6 py-4 mb-2 w-full" id="alertBox">
    <p class="text-sm text-center leading-6 text-gray-900 dark:text-white w-full">
      <a href="#">
        <% if notice %>
          <%= notice %>
        <% elsif alert %>
          <%= alert %>
        <% end %>
      </a>
    </p>

    <div class="flex flex-1 justify-end">
      <button type="button" class="-m-3 p-3 focus-visible:outline-offset-[-4px] dark:text-white" onclick="closeAlert()">
        <%= heroicon "x-mark", variant: :outline %>
      </button>
    </div>
  </div>

  <script>
    function closeAlert() {
      var alertBox = document.getElementById('alertBox');
      alertBox.style.display = 'none';
    }
  </script>
<% end %>
