<% if notice || alert %>
  <div class="transition-all flex items-center bg-nepal-300 dark:bg-slate-600 px-6 py-4 mb-2 w-full" data-controller="alert" data-alert-target="closeAlert">
    <p class="text-sm text-center leading-6 text-gray-900 dark:text-white w-full">
      <% if notice %>
        <%= notice %>
      <% elsif alert %>
        <%= alert %>
      <% end %>
    </p>

    <div class="flex flex-1 justify-end">
      <button type="button" class="-m-3 p-3 focus-visible:outline-offset-[-4px] dark:text-white" data-action="click->alert#closeAlert">
        <%= heroicon "x-mark", variant: :outline %>
      </button>
    </div>
  </div>
<% end %>
