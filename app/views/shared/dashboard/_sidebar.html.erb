  <%= link_to "Project X", dashboard_index_path, class: "w-full bg-nepal-500 px-2 py-6 text-center text-xs font-bold uppercase border-b-2 border-r-2 border-solid border-black dark:bg-slate-800 dark:border-white" %>

  <div class="flex flex-col h-full text-sm p-4 border-r-2 border-solid border-black dark:border-white">
    <div class="flex-1 space-y-2">
      <%= active_link_to dashboard_index_path, active: :exclusive, class: "flex cursor-pointer items-center p-4 rounded-md dark:hover:bg-slate-600" do %>
        <%= heroicon "home-modern", variant: :outline %>
        <div class="hidden h-full md:block md:mx-1">|</div>
        <span class="hidden md:block">Home</span>
      <% end %>
      
      <%= active_link_to tasks_path, active: :exclusive, class: "flex cursor-pointer items-center p-4 rounded-md hover:bg-neutral-200" do %>
        <%= heroicon "list-bullet", variant: :outline %>
        <div class="hidden h-full md:block md:mx-1">|</div>
        <span class="hidden md:block">My Tasks</span>
      <% end %>

      <%= active_link_to sub_tasks_path, active: :exclusive, class: "flex cursor-pointer items-center p-4 rounded-md hover:bg-neutral-200" do %>
        <%= heroicon "list-bullet", variant: :outline %>
        <div class="hidden h-full md:block md:mx-1">|</div>
        <span class="hidden md:block">Sub Tasks</span>
      <% end %>
      
      <%= active_link_to root_path, active: :exclusive, class: "flex cursor-pointer items-center p-4 rounded-md dark:hover:bg-slate-600" do %>
        <%= heroicon "archive-box-arrow-down", variant: :outline %>
        <div class="hidden h-full md:block md:mx-1">|</div>
        <span class="hidden md:block">Recent</span>
      <% end %>

      <%= active_link_to companies_path, active: :exclusive, class: "flex cursor-pointer items-center p-4 rounded-md dark:hover:bg-slate-600" do %>
        <%= heroicon "globe-alt", variant: :outline %>
        <div class="hidden h-full md:block md:mx-1">|</div>
        <span class="hidden md:block">Companies</span>
      <% end %>

      <%= active_link_to teams_path, active: :exclusive, class: "flex cursor-pointer items-center p-4 rounded-md dark:hover:bg-slate-600" do %>
        <%= heroicon "user-group", variant: :outline %>
        <div class="hidden h-full md:block md:mx-1">|</div>
        <span class="hidden md:block">Teams</span>
      <% end %>

      <%= active_link_to projects_path, active: :exclusive, class: "flex cursor-pointer items-center p-4 rounded-md hover:bg-neutral-200 dark:hover:bg-slate-600" do %>
        <%= heroicon "map", variant: :outline %>
        <div class="hidden h-full md:block md:mx-1">|</div>
        <span class="hidden md:block">Projects</span>
      <% end %>
    </div>

      <div class="flex justify-center ">
        <h1 class="my-5">Theme Toggle</h1>
      </div>


      <label for="darkModeToggle" class="bg-gray-200 relative inline-flex h-6 w-11 flex-shrink-0 cursor-pointer rounded-full border-2 border-transparent transition-colors duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-offset-2" role="switch" aria-checked="false">
        <input type="checkbox" id="darkModeToggle" class="hidden">
				<span class="sr-only">Theme</span>

				<span class="translate-x-0 pointer-events-none relative inline-block h-5 w-5 transform rounded-full bg-white shadow ring-0 transition duration-200 ease-in-out icons-wrapper">
					<span class="opacity-100 duration-200 ease-in absolute inset-0 flex h-full w-full items-center justify-center transition-opacity sun-span" aria-hidden="true">
						<%= heroicon "sun", variant: :outline, options: { class: "h-3 w-3" } %>
					</span>
					
					<span class="opacity-0 duration-100 ease-out absolute inset-0 flex h-full w-full items-center justify-center transition-opacity moon-span" aria-hidden="true">
						<%= heroicon "moon", variant: :outline, options: { class: "h-3 w-3 text-indigo-600" } %>
					</span>
				</span>
			</label>

    <div>
      <%= active_link_to edit_user_registration_path, active: :exclusive, class: "flex cursor-pointer items-center p-4 rounded-md  dark:hover:bg-slate-600" do %>
        <% if current_user.avatar.attached? %>
          <%= image_tag current_user.avatar, alt: "#{current_user.full_name}", class: "h-8 w-8 rounded-full" %>
        <% else %>
          <%= heroicon "user-circle", variant: :outline %>
        <% end%>

        <div class="hidden h-full md:block md:mx-1">|</div>
        <span class="hidden md:block">
          <% if current_user.present?%>
            <%= current_user.full_name %>
          <% end %>
        </span>
      <% end %>
    </div>
