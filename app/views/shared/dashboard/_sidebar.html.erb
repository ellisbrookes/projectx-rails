<nav class="fixed flex flex-col top-0 left-0 w-24 h-full bg-neutral-100 md:w-60">
  <%= link_to "Project X", dashboard_index_path, class: "w-full bg-nepal-500 px-2 py-6 text-center text-xs font-bold uppercase border-b-2 border-r-2 border-solid border-black" %>

  <div class="flex flex-col h-full text-sm p-4 border-r-2 border-solid border-black">
    <div class="flex-1 space-y-2">
      <%= active_link_to dashboard_index_path, active: :exclusive, class: "flex cursor-pointer items-center p-4 rounded-md hover:bg-neutral-200" do %>
        <%= heroicon "home-modern", variant: :outline %>
        <div class="hidden h-full md:block md:mx-1">|</div>
        <span class="hidden md:block">Home</span>
      <% end %>
      
      <%= active_link_to root_path, active: :exclusive, class: "flex cursor-pointer items-center p-4 rounded-md hover:bg-neutral-200" do %>
        <%= heroicon "list-bullet", variant: :outline %>
        <div class="hidden h-full md:block md:mx-1">|</div>
        <span class="hidden md:block">My Tasks</span>
      <% end %>
      
      <%= active_link_to root_path, active: :exclusive, class: "flex cursor-pointer items-center p-4 rounded-md hover:bg-neutral-200" do %>
        <%= heroicon "archive-box-arrow-down", variant: :outline %>
        <div class="hidden h-full md:block md:mx-1">|</div>
        <span class="hidden md:block">Recent</span>
      <% end %>

      <%= active_link_to companies_path, active: :exclusive, class: "flex cursor-pointer items-center p-4 rounded-md hover:bg-neutral-200" do %>
        <%= heroicon "globe-alt", variant: :outline %>
        <div class="hidden h-full md:block md:mx-1">|</div>
        <span class="hidden md:block">Companies</span>
      <% end %>

      <%= active_link_to teams_path, active: :exclusive, class: "flex cursor-pointer items-center p-4 rounded-md hover:bg-neutral-200" do %>
        <%= heroicon "user-group", variant: :outline %>
        <div class="hidden h-full md:block md:mx-1">|</div>
        <span class="hidden md:block">Teams</span>
      <% end %>
    </div>

    <div>
      <%= active_link_to edit_user_registration_path, active: :exclusive, class: "flex cursor-pointer items-center p-4 rounded-md hover:bg-neutral-200" do %>
        <% if current_user.avatar.attached? %>
          <%= image_tag current_user.avatar, alt: "#{current_user.full_name}", class: "h-8 w-8 rounded-full" %>
        <% else %>
          <%= heroicon "user-circle", variant: :outline %>
        <% end%>

        <div class="hidden h-full md:block md:mx-1">|</div>
        <span class="hidden md:block">
          <% if current_user.present?%>
            <%= current_user.full_name %>
          <% end %>
        </span>
      <% end %>
    </div>
  </div>
</nav>