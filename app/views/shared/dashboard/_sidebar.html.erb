<nav class="fixed flex flex-col top-0 left-0 w-24 h-full bg-neutral-100 md:w-60 dark:bg-slate-900 dark:text-white">
  <%= link_to "Project X", dashboard_index_path, class: "w-full px-2 py-6 text-center text-xs font-bold uppercase dark:bg-slate-900 dark:border-white" %>

  <div class="flex flex-col h-full text-sm p-4">
    <div class="flex-1 space-y-2">
      <%= active_link_to dashboard_index_path, active: :exclusive, class: "flex cursor-pointer items-center p-4 rounded-md hover:bg-neutral-200 dark:hover:bg-slate-600" do %>
        <%= heroicon "home-modern", variant: :outline %>
        <div class="hidden h-full md:block md:mx-1">|</div>
        <span class="hidden md:block">Home</span>
      <% end %>

      <%= active_link_to root_path, active: :exclusive, class: "flex cursor-pointer items-center p-4 rounded-md hover:bg-neutral-200 dark:hover:bg-slate-600" do %>
        <%= heroicon "archive-box-arrow-down", variant: :outline %>
        <div class="hidden h-full md:block md:mx-1">|</div>
        <span class="hidden md:block">Recent</span>
      <% end %>

      <%= active_link_to companies_path, active: :exclusive, class: "flex cursor-pointer items-center p-4 rounded-md hover:bg-neutral-200 dark:hover:bg-slate-600" do %>
        <%= heroicon "globe-alt", variant: :outline %>
        <div class="hidden h-full md:block md:mx-1">|</div>
        <span class="hidden md:block">Companies</span>
      <% end %>
    </div>

    <div>
      <!-- Enabled: "bg-indigo-600", Not Enabled: "bg-gray-200" -->
      <button type="button" class="relative inline-flex h-6 w-11 flex-shrink-0 cursor-pointer rounded-full border-2 transition-colors duration-200 ease-in-out focus:outline-none" role="switch" aria-checked="false" data-theme-target="themeToggle" data-action="click->theme#toggleTheme">
        <span class="sr-only">Theme toggle</span>
        <!-- Enabled: "translate-x-5", Not Enabled: "translate-x-0" -->
        <span class="translate-x-0 pointer-events-none relative inline-block h-5 w-5 transform rounded-full bg-white shadow transition duration-200 ease-in-out" data-theme-target="switcher"></span>
      </button>
    </div>

    <div>
      <%= active_link_to edit_user_registration_path, active: :exclusive, class: "flex cursor-pointer items-center p-4 rounded-md hover:bg-neutral-200 dark:hover:bg-slate-600" do %>
        <% if current_user.avatar.attached? %>
          <%= image_tag current_user.avatar, alt: "#{current_user.full_name}", class: "h-8 w-8 rounded-full" %>
        <% else %>
          <%= heroicon "user-circle", variant: :outline %>
        <% end %>

        <div class="hidden h-full md:block md:mx-1">|</div>
        <span class="hidden md:block">
          <% if current_user.present? %>
            <%= current_user.full_name %>
          <% end %>
        </span>
      <% end %>
    </div>
  </div>
</nav>
