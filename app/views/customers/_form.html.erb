<%= form_with(model: [@company, customer], class: "contents") do |f| %>
  <% if customer.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(customer.errors.count, "error") %>
        prohibited this customer from being saved:</h2>

      <ul>
        <% customer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= f.label :name %>
    <%= f.text_field :full_name, class: "block rounded-md border border-neutral-200 outline-none px-3 py-2 mt-2 w-full dark:border-black dark:bg-indigo-900" %>
  </div>

  <div class="my-5">
    <%= f.label :address %>
    <%= f.text_area :address, rows: 4, class: "block rounded-md border border-neutral-200 outline-none px-3 py-2 mt-2 w-full dark:border-black dark:bg-indigo-900" %>
  </div>

  <div class="my-5">
    <%= f.label :phone_number %>
    <%= f.number_field :phone_number, class: "block rounded-md border border-neutral-200 outline-none px-3 py-2 mt-2 w-full dark:border-black dark:bg-indigo-900" %>
  </div>

  <div class="my-5">
    <%= f.label :email %>
    <%= f.text_field :email, class: "block rounded-md border border-neutral-200 outline-none px-3 py-2 mt-2 w-full dark:border-black dark:bg-indigo-900" %>
  </div>

  <div class="my-5">
    <%= f.label :notes %>
    <%= f.text_area :notes, rows: 4, class: "block rounded-md border border-neutral-200 outline-none px-3 py-2 mt-2 w-full dark:border-black dark:bg-indigo-900" %>
  </div>

  <%= f.hidden_field :company_id, value: @company.id  %>

  <div class="inline">
    <%= f.submit class: "rounded-lg py-3 px-5 bg-neutral-100 hover:bg-neutral-200 dark:bg-indigo-900 dark:hover:bg-indigo-950 cursor-pointer" %>
  </div>
<% end %>
