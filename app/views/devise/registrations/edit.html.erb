<div class="md:max-w-xl">
    <h1 class="font-bold text-4xl">Edit <%= resource_name.to_s.humanize %></h1>

    <div class="flex flex-col space-y-6">
        <%= form_for(resource, as: resource_name, url:
        registration_path(resource_name), html: { method: :put, class:
        'space-y-6' }) do |f| %> <%= render "devise/shared/error_messages",
        resource: resource %>

        <div>
            <%= f.label :avatar, class: 'block text-sm font-medium leading-6
            text-gray-900' %>

            <div class="mt-2">
                <%= f.file_field :avatar, class: 'block w-full rounded-md
                border-0 p-1.5 text-gray-900 shadow-sm ring-1 ring-inset
                ring-gray-300 placeholder:text-gray-400 focus:ring-2
                focus:ring-inset focus:ring-nepal-500 sm:text-sm sm:leading-6'
                %>
            </div>
        </div>

        <div>
            <%= f.label :full_name, class: 'block text-sm font-medium leading-6
            text-gray-900' %>

            <div class="mt-2">
                <%= f.text_field :full_name, autofocus: true, class: 'block
                w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1
                ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2
                focus:ring-inset focus:ring-nepal-500 sm:text-sm sm:leading-6'
                %>
            </div>
        </div>

        <div>
            <%= f.label :email, class: 'block text-sm font-medium leading-6
            text-gray-900' %>

            <div class="mt-2">
                <%= f.email_field :email, autofocus: true, autocomplete:
                "email", class: 'block w-full rounded-md border-0 py-1.5
                text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300
                placeholder:text-gray-400 focus:ring-2 focus:ring-inset
                focus:ring-nepal-500 sm:text-sm sm:leading-6' %>
            </div>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>
            Currently waiting confirmation for: <%= resource.unconfirmed_email
            %>
        </div>
        <% end %>

        <div>
            <%= f.label "Password (leave blank if you don't want to change it, 6
            characters minimum)", class: 'block text-sm font-medium leading-6
            text-gray-900' %>

            <div class="mt-2">
                <%= f.password_field :password, autocomplete: "new-password",
                class: 'block w-full rounded-md border-0 py-1.5 text-gray-900
                shadow-sm ring-1 ring-inset ring-gray-300
                placeholder:text-gray-400 focus:ring-2 focus:ring-inset
                focus:ring-nepal-500 sm:text-sm sm:leading-6' %>
            </div>
        </div>

        <div>
            <%= f.label :password_confirmation, class: 'block text-sm
            font-medium leading-6 text-gray-900' %>

            <div class="mt-2">
                <%= f.password_field :password_confirmation, autocomplete:
                "new-password", class: 'block w-full rounded-md border-0 py-1.5
                text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300
                placeholder:text-gray-400 focus:ring-2 focus:ring-inset
                focus:ring-nepal-500 sm:text-sm sm:leading-6' %>
            </div>
        </div>

        <div>
            <%= f.label "Current password (we need your current password to
            confirm your changes)", class: 'block text-sm font-medium leading-6
            text-gray-900' %>

            <div class="mt-2">
                <%= f.password_field :current_password, autocomplete:
                "current-password", class: 'block w-full rounded-md border-0
                py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300
                placeholder:text-gray-400 focus:ring-2 focus:ring-inset
                focus:ring-nepal-500 sm:text-sm sm:leading-6' %>
            </div>
        </div>

        <div>
            <%= f.submit "Update", class: 'flex cursor-pointer w-full
            justify-center rounded-md bg-nepal-500 px-3 py-1.5 text-sm
            font-semibold leading-6 text-white shadow-sm hover:bg-nepal-500
            focus-visible:outline focus-visible:outline-2
            focus-visible:outline-offset-2 focus-visible:outline-nepal-500' %>
        </div>
        <% end %>

        <div>
            <h3 class="font-bold text-md">Want to close your account?</h3>

            <%= button_to "Close your account?",
            registration_path(resource_name), data: { confirm: "Are you sure?",
            turbo_confirm: "Are you sure?" }, method: :delete, class: 'mt-4 flex
            cursor-pointer w-full justify-center rounded-md bg-red-500 px-3
            py-1.5 text-sm font-semibold leading-6 text-white shadow-sm
            hover:bg-red-500 focus-visible:outline focus-visible:outline-2
            focus-visible:outline-offset-2 focus-visible:outline-red-500' %>
        </div>
    </div>
</div>
