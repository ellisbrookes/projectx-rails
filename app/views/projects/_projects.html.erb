<div id="<%= dom_id projects %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= projects.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= projects.description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this project", projects, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this project', edit_company_path(projects), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
  <% end %>
</div>
