<div id="<% dom_id team %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= team.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medum mb-1">Description:</strong>
    <%= team.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medum mb-1">Team Email:</strong>
    <%= team.email %>
  </p>

  <p class="mt-5">
    <strong class="block font-medum mb-1">Team Members</strong>
    <ul>
      <% @team.team_members.each do |tm| %>
      <li>
        <%= tm.user.full_name %>
      </li>
      <% end %>
    </ul>
  </p>

  <p class="my-5">
    <strong class="block font-medum mb-1">Company</strong>
    <%= link_to team.company.name, company_path(@company) %>
  </p>

  <p class="mt-5">
    <strong class="block font-medum mb-1">Projects</strong>
    <ul>
      <% @team.projects.each do |p| %>
      <li>
        <%= link_to p.title, company_team_project_path(@company, @team, p) %>
      </li>
      <% end %>
    </ul>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this team", team, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this team", edit_team_path(team), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <% end %>
</div>
