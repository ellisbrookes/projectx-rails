<%= render HeadingComponent.new(title: "Teams", text: "A list of the teams in your company including its name, description, assigned members",
 link_title: "New Team",
 link_path: new_company_team_path
 ) %>

<%= render TableComponent.new(
  headers: %w[Name Email Description Members Company],
  rows:
    @teams.map do |team|
      [
        link_to(team.name, company_team_path(@company, team)),
        team.email,
        team.description,
        team.team_members,
        link_to(team.company.name, company_path(@company))
      ]
      #[link_to(project.title, company_project_path(@company, project)), project.description, project.start_date.strftime("%d/%m/%Y"), project.completion_date.strftime("%d/%m/%Y"), number_to_currency(project.estimated_budget, unit: '£'), number_to_currency(project.actual_budget, unit: '£'), project.team.name, project.company.name ]
    end
) %>
