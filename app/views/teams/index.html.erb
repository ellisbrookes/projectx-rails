<%= render HeadingComponent.new(title: "Teams", text: "A list of the teams in your company including its name, description, assigned members",
 link_title: "New Team", 
 link_path: new_company_team_path
 ) %>

<%= render TableComponent.new(
  headers: %w[Name Email Description Members Company],
  rows:
    @teams.map do |team|
      [link_to(team.name, company_team_path(@company, team)), team.team_email, team.description, team.team_members.pluck(:user_id).map {|tm| User.find(tm).full_name}.join(', ').html_safe, team.company.name ]
    end
) %>

