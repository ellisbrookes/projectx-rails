<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">
    New Comment for <%= @task.name %>
  </h1>

  <%= form_with(model: [@company, @team, @project, @task, Comment.new], class: "contents") do |f| %>
   <div class="my-5">
     <%= f.label :body %>
     <%= f.text_area :body, class: "dark:bg-slate-700 block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full appearance-none", rows: 4, placeholder: "Enter your comment here", style: "resize: none;"%>
   </div>

   <div class="inline">
     <%= f.submit "Add comment", class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
   </div>
  <% end %>

  <%= link_to 'Back to task', company_team_project_tasks_path(@company, @team, @project, @task), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium dark:bg-slate-700 dark:hover:bg-slate-600" %>
</div>
