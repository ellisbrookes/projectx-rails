<% render HeadingComponent.new(
  title: "Notifications",
  text: "A list of notifications in your acount"
) %>

<%= link_to("Mark all as read", mark_as_read_notifications_path, data: { turbo_method: :post }) %>
<%= link_to("Mark all as unread", mark_as_unread_notifications_path, data: { turbo_method: :post }) %>

<%= render TableComponent.new(
  headers: ["Message", "Created at"],
  rows:
    @notifications.map do |notification|
      [
        notification.message,
        "#{time_ago_in_words(notification.created_at)} ago"
      ]
    end
) %>
