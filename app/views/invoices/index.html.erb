<%= render HeadingComponent.new(title: "Invoices", text: "A list of the invoices in your project including its number, client name and issue date",
  link_title: "New Invoice",
  link_path: new_company_team_project_invoice_path
 ) %>

<%= render TableComponent.new(
  headers: %w[invoice_number client_name issue_date due_date client_address company_address amount project_id],
  rows:
    @invoices.map do |invoice|
      [
        link_to(invoice.invoice_number, company_team_project_invoice_path(@company, @team, @project, invoice)),
        invoice.client_name,
        invoice.issue_date,
        invoice.due_date.strftime("%d/%m/%Y"),
        invoice.client_address,
        invoice.company_address,
        number_to_currency(invoice.amount, unit: 'Â£'),        
        link_to(invoice.project.title, company_team_project_path(@company, @team, @project))

      ]
    end
) %>
