<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
  <%= render @invoices %>

    <%= link_to "Edit this invoice", edit_company_team_project_invoice_path(@company, @team, @project), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium dark:bg-slate-700 dark:hover:bg-slate-600" %>
    <%= link_to "Back to invoices", company_team_project_invoice_path(@company, @team, @project) class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium dark:bg-slate-700 dark:hover:bg-slate-600" %>

