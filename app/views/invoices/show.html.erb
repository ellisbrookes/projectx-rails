      <%= link_to "Destroy this invoice", company_team_project_invoice_path(@company, @team, @project @invoice), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class:"mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium bg-red-500 dark:bg-red-500 dark:hover:bg-red-400" %>
    </div>
  </div>
