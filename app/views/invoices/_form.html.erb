<%= form_with(model: [@company, invoice], data: {controller: 'nested-form', nested_form_wrapper_selector_value: '.nested-form-wrapper'}, class: "contents") do |f| %>
  <template data-nested-form-target="template">
    <%= f.fields_for :items, Item.new, child_index: 'NEW_RECORD' do |items_field| %>
      <%= render "items_form", f: items_field %>
    <% end %>
  </template>
  <% if invoice.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(invoice.errors.count, "error") %> prohibited this invoice from being saved:</h2>
      <ul>
        <% invoice.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= f.label :invoice_issue %>
    <%= f.text_field :invoice_issue, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full dark:text-white dark:border-black dark:bg-slate-600" %>
  </div>

  <div class="my-5">
    <%= f.label :customer_id %>
    <%= f.collection_select :customer_id, Customer.where(company_id: @company).order(:full_name), :id, :full_name, { prompt: true }, { class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full appearance-none dark:text-white dark:border-black dark:bg-slate-600" } %>
  </div>

  <div class="my-5">
    <%= f.label :issue_date %>
    <%= f.date_field :issue_date, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full dark:text-white dark:border-black dark:bg-slate-600", value: Time.now.strftime('%Y-%m-%d') %>
  </div>

  <div class="my-5">
    <%= f.label :due_date %>
    <%= f.date_field :due_date, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full dark:text-white dark:border-black dark:bg-slate-600" %>
  </div>

  <div class="my-5">
    <% if Customer.present? %>
      <%= f.label :customer_address %>
      <%= f.text_area :customer_address, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full dark:text-white dark:border-black dark:bg-slate-600" %>
    <% end %>
  </div>

  <div class="my-5">
    <%= f.label :company_address %>
    <%= f.text_area :company_address, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full dark:text-white dark:border-black dark:bg-slate-600", value: @company&.address %>
  </div>

  <div class="my-5">
    <%= f.label :notes %>
    <%= f.text_area :notes, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full dark:text-white dark:border-black dark:bg-slate-600" %>
  </div>

  <div class="my-5">
    <%= f.fields_for :items do |items_fields| %>
      <%= render "_form", f: items_fields %>
    <% end %>
    <div data-nested-form-target="target"></div>
    <button type="button" data-action="nested-form#add">Add Item</button>
  </div>

  <div class="my-5">
    <%= f.label :amount %>

    <div class="flex items-center space-x-3 dark:text-black">
      <%= f.number_field :amount, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-1/2 dark:text-white dark:border-black dark:bg-slate-600", step: "0.01" %>
      <%= f.select :currency, options_for_select(%w[GBP USD EUR], "GBP"), {}, { class: "block shadow rounded-md border border-gray-200 p-2 pr-8 mt-2 dark:text-white dark:border-black dark:bg-slate-600" } %>
    </div>

    <%= f.hidden_field :company_id, value: @company.id %>
  </div>

  <div class="inline">
    <%= f.submit class:"rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer dark:bg-slate-600" %>
  </div>
<% end %>
