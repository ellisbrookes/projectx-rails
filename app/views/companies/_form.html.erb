<%= form_with model: company do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <% company.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>

    <% company.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>

    <% company.errors.full_messages_for(:email).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>