<%= render HeadingComponent.new(title: "Companies", text: "A list of the companies in your account including its name, description, assigned email and status.", link_title: "New Company", link_path: new_company_path) %>

<div class="mt-8 flow-root">
  <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
      <table class="min-w-full divide-y divide-gray-200 dark:divide-slate-700 table-auto">
        <thead>
          <tr>
            <th scope="col" class="bg-gray-100 p-3 dark:bg-slate-900 dark:text-white text-gray-900 lg:table-cell">Name</th>
            <th scope="col" class="bg-gray-100 p-3 dark:bg-slate-900 dark:text-white  text-gray-900 lg:table-cell">Email</th>
            <th scope="col" class="bg-gray-100 p-3 dark:bg-slate-900 dark:text-white text-gray-900 lg:table-cell">Description</th>
            <th scope="col" class="bg-gray-100 dark:bg-slate-900 dark:text-white  text-gray-900 lg:table-cell">Actions
              <span class="sr-only">Show</span>
              <span class="sr-only">Edit</span>
              <span class="sr-only">Destroy</span>  
            </th>
          </tr>
        </thead>

        <tbody>
          <% @companies.each do |company| %>
            <tr class="even:bg-gray-100 dark:even:bg-slate-900">
              <td class="whitespace-nowrap px-3 py-5 text-sm">
                <div class="text-gray-900 dark:text-white text-center"><%= company.name %></div>
              </td>

              <td class="whitespace-nowrap px-3 py-5 text-sm">
                <div class="text-gray-900 dark:text-white text-center"><%= company.email %></div>
              </td>

              <td class="whitespace-nowrap px-3 py-5 text-sm">
                <div class="text-gray-900 dark:text-white text-center"><%= company.description %></div>
              </td>

              <td class="whitespace-nowrap px-3 py-5 text-sm text-center">
                <%= link_to "Show", company, class: "text-nepal-500 hover:text-nepal-400 hover:underline dark:text-white dark:hover:text-gray-300" %>
                <%= link_to 'Edit', edit_company_path(company), class: "text-nepal-500 hover:text-nepal-400 hover:underline dark:text-white dark:hover:text-gray-300" %>
                <%= link_to 'Destroy', company_path(company), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-nepal-500 hover:text-nepal-400 hover:underline dark:text-white dark:hover:text-gray-300" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
