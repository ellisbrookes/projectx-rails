<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= render @company %>

    <h2>Users in this company</h2>
    <ul>
      <% @company.users.each do |cu| %>
        <li><%= cu.full_name %></li>
      <% end %>
    </ul>

    <h2>Add User:</h2>
    <%= form_with(model: [@company, @company.users.build], local: true) do |f| %>
      <%= f.collection_select :id, User.all - @company.users, :id, :full_name %>
      <%= f.submit 'Add User' %>
    <% end %>

    <%= link_to "Edit this company", edit_company_path(@company), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium dark:bg-slate-700 dark:hover:bg-slate-600" %>

    <%= link_to "Back to companies", companies_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium dark:bg-slate-700 dark:hover:bg-slate-600" %>

    <div class="inline-block ml-2">
      <%=
        link_to "Destroy this company",
        company_path(@company),
        data: {
          turbo_method: :delete,
          turbo_confirm: "Are you sure?"
        },
        class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium bg-red-500 dark:bg-red-500 dark:hover:bg-red-400"
      %>
    </div>
  </div>
</div>
